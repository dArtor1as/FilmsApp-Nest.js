<!-- Enhanced main.hbs with improved design and inline comments -->
{{! main.hbs }}
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>My Cinema</title>
    <!-- Including Bootstrap CSS for styling -->
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css'
      rel='stylesheet'
    />
    <style>

      /* Main title styling */ .main-title { font-size: 2.5rem; font-weight:
      bold; color: #007bff; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px; } /* Subtitle for introductory text */ .main-subtitle
      { font-size: 1.2rem; color: #6c757d; margin-bottom: 30px; } /* Card
      styling */ .card { border: none; border-radius: 10px; box-shadow: 0 4px
      10px rgba(0, 0, 0, 0.1); transition: transform 0.3s, box-shadow 0.3s; }
      .card:hover { transform: translateY(-5px); box-shadow: 0 8px 20px rgba(0,
      0, 0, 0.2); } /* Button styling */ .btn-primary { background-color:
      #007bff; border: none; transition: background-color 0.3s; }
      .btn-primary:hover { background-color: #0056b3; }
    </style>
  </head>
  <body class='bg-light'>
    <div class='container text-center mt-4'>
      <!-- Welcome Title -->
      <h1 class='main-title'>Ласкаво просимо до My Cinema!</h1>
      <p class='main-subtitle'>Переглядайте фільми, читайте рецензії та
        насолоджуйтесь!</p>

      <!-- Cards Section -->
      <div class='row mt-4'>
        <div class='col-md-6'>
          <div class='card'>
            <div class='card-body text-center'>
              <h5 class='card-title'>Перегляньте наші фільми</h5>
              <p class='card-text'>Дізнайтеся більше про улюблені жанри та нові
                фільми.</p>
              <a href='/films' class='btn btn-primary'>Перейти до фільмів</a>
            </div>
          </div>
        </div>
        <div class='col-md-6'>
          <div class='card'>
            <div class='card-body text-center'>
              <h5 class='card-title'>Читайте рецензії</h5>
              <p class='card-text'>Ознайомтеся з відгуками інших глядачів про
                фільми.</p>
              <a href='/reviews' class='btn btn-primary'>Перейти до рецензій</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Including Bootstrap JS for interactivity -->
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js'
    ></script>
  </body>
</html>